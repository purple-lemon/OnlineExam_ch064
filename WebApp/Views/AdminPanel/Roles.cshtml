@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedRes> SharedLocalizer

<div style="margin-bottom:20px;"></div>
<a asp-action="Users">@SharedLocalizer["UsersLst"]</a>

<h2>@SharedLocalizer["RolesLst"]</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-default">
                        @SharedLocalizer["Delete"]
                    </button>
                </form>
            </td>
        </tr>
    }
    
</table>

<form asp-action="CreateRole">
    <div class="form-group">
        <label for="name">@SharedLocalizer["NewRole"]</label>
        <input name="name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-default">@SharedLocalizer["Add"]</button>
</form>