@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@inject IHtmlLocalizer<SharedRes> SharedLocalizer
<style>
    .form-container {
        background: #ffffff;
        max-width: 620px;
        margin: auto;
    }

    .soft {
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
        width: 100%;
        height: auto;
    }
    .footer {
        background:#e1e1e1;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        width: 100%;
        height: 100px;
        bottom:0;
        
    }
    .text {
        margin-top: 20px;
        margin-left: 20px;
        font-size:16px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="form-container col-lg-7">
            <h1>@SharedLocalizer["ContactUs"]</h1>
            <br />
            <form asp-controller="EmailMessages" asp-action="GetMessage" method="post" id="reused_form">
                <label for="name">@SharedLocalizer["Your"] @SharedLocalizer["Name"]:</label>
                <input id="name" type="text" class="form-control" name="Name" required maxlength="50">

                <label for="email">@SharedLocalizer["Your"] Email:</label>
                <input id="email" class="form-control" type="email" name="Email" required maxlength="70">

                <label for="message">@SharedLocalizer["Message"]:</label>
                <textarea id="message" class="form-control" name="Message" rows="10" maxlength="6000" required></textarea>

                <br />
                <input class="btn btn-primary btn-send-email" type="submit" value="@SharedLocalizer["Send"]" />
            </form>
        </div>
        <br />
        <div class="col-lg-5 ">
            <a href="https://goo.gl/maps/hD9foPfbffJ2" target="_blank"><img class="soft" src="~/images/Screenshot_13.png" /></a>
        </div>
    </div>
    <br />
    <br />
    <div class="row footer">
        <p class="text">Адрес: 246, Головна вулиця, 246, Чернівці, Чернівецька область, 58000</p>
        <p class="text">Телефон: 0372 586 130</p>
    </div>
</div>
<br />
@section Scripts{
    <script>
        $(".btn-send-email").click(function () {
